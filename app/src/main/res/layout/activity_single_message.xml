<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/md_additions_card_margin"
                >

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/sender_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/kullo_settings_avatar"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/sender_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sender Name"
                                android:textSize="20sp"
                                android:textColor="@color/kulloAccentColor"
                                />

                            <TextView
                                android:id="@+id/sender_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Company Inc."
                                android:layout_alignParentLeft="true"
                                android:layout_below="@+id/sender_name"
                                android:textSize="12sp"
                                android:textColor="@color/kulloTextPrimaryColor"
                                android:layout_toLeftOf="@+id/message_date"
                                android:layout_toStartOf="@+id/message_date"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:id="@+id/message_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="today"
                                android:layout_alignParentRight="true"
                                android:layout_alignBottom="@+id/sender_company"
                                android:textSize="12sp"
                                android:textColor="@color/kulloTextPrimaryColor"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/message_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/kulloTextPrimaryColor"
                        android:autoLink="web"
                        android:textIsSelectable="true"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/attachments_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        />

                    <Button
                        android:id="@+id/download_button"
                        android:text="@string/download_attachments"
                        android:textColor="@color/kulloAccentColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        style="?android:attr/borderlessButtonStyle"/>

                    <View
                        android:id="@+id/footer_divider"
                        style="@style/Divider"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/footer_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/kulloTextPrimaryColor"
                        android:textIsSelectable="true"
                        />

                    <Button
                        android:id="@+id/footer_button"
                        android:text="@string/show_footer"
                        android:textColor="@color/kulloAccentColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        style="?android:attr/borderlessButtonStyle"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
