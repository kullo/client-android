<resources>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="MdAdditions.Card.Title" parent="@style/Base.TextAppearance.AppCompat.Headline">
    </style>

    <style name="MdAdditions.Card.Subtitle" parent="@style/Base.TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Default button style is RaisedButton (set in theme) -->
    <style name="RaisedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/kulloTurquoise</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="NestedScrollBarVerticalStyle">
        <item name="android:scrollbarFadeDuration">250</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RecyclerViewScrollBarVerticalStyle">
        <item name="android:scrollbarFadeDuration">250</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/md_additions_primary_text</item>
    </style>
    <style name="Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/md_additions_secondary_text</item>
    </style>

</resources>
