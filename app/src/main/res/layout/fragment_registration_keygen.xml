<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="16dp">


     <TextView
        android:id="@+id/masterkey_creation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_keys_title"
        android:textSize="16sp"
        android:textColor="@color/kulloTextPrimaryColor"
        />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/masterkey_creation_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:indeterminate="false"
        app:mpb_progressStyle="horizontal"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_keys_description_short"
        android:textColor="@color/kulloTextPrimaryColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_keys_description_long"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginTop="12dp"
        />

</LinearLayout>
