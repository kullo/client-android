<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/md_additions_card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:background="@drawable/background_for_transparent_images"
            android:src="@drawable/team_photo"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/image_meta_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/md_additions_card_padding"
            android:textSize="@dimen/md_additions_card_supporting_text"
            android:text="Bild1.png (320 KB)"
            android:maxLines="1"
            android:ellipsize="middle"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
